<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "sessions" && action_name == "new" %>
      
      <%= render 'layouts/header' %>
      <div id="container">
        <% flash.each do |message_type, message| %>
          <% puts "MESSAGE TYPE: #{message_type}" %>
          <div class="alert <%= bootstrap_class_for(message_type) %> fade in">
            <button class="close" data-dismiss="alert">×</button>
            <%= message %>
          </div>
          <% puts "MESSAGE TYPE: #{message_type}" %>
        <%end%>
      </div>

      <% else %>

    	<div id="container">
    		<% flash.each do |message_type, message| %>
          <% puts "MESSAGE TYPE: #{message_type}" %>
          <div class="alert <%= bootstrap_class_for(message_type) %> fade in login-flash">
            <button class="close" data-dismiss="alert">×</button>
            <%= message %>
          </div>
          <% puts "MESSAGE TYPE: #{message_type}" %>
    		<%end%>
    	</div>

    <% end %>
    <%= yield %>
  </body>
</html>
