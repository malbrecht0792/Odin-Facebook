<h1>FriendRequests#index</h1>

<% @users.each do |user| %>
	<p>
		<%= user.first_name %>
		<%= user.last_name %>
	</p>
	<div>
		<%= form_for(current_user.passive_friend_requests.find_by(requestor_id: user.id),
             													  html: { method: :patch },
             													  remote: true) do |f| %>
		  	<%= f.submit "Accept", class: "btn" %>
		<% end %>
	</div>
<% end %>