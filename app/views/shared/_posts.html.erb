<% @posts.each do |post| %>
  <div class="post">
    <p>
      <div class="profile-details-wrapper">
        <span class="user-avatars">
          <%= gravatar_for post.author, size: 40 %>
        </span>
        <div class="profile-details">
          <div class="author-name">
            <li><%= link_to full_name(post.author), post.author, {:style=>"color: #365899;"} %></li>
          </div>
          <div class="time-ago">
            Posted <%= time_ago_in_words(post.created_at) %> ago
          </div>
        </div>
      </div>
    </p>
    <p>
      <%= post.content %>
    </p>
    <div class="number-of-likes">
      <%= pluralize(post.likes.count, "like") if post.likes.count > 0 %> 
    </div>
    <%= render 'users/like_form', post: post %>
  </div>
  <%= render 'users/comments', post: post %>
<% end %>